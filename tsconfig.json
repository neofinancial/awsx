{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "declaration": false,
    "outDir": "build",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
