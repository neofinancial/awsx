{
  "name": "awsx",
  "description": "AWS CLI profile switcher with MFA support",
  "version": "1.1.3",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/awsx"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "_awsx_prompt": "./bin/awsx.js",
    "_awsx": "./bin/run.sh"
  },
  "scripts": {
    "start": "NODE_ENV=development ts-node src/app.ts",
    "start:build": "node bin/awsx.js",
    "build": "NODE_ENV=production ncc build src/app.ts -o build --minify --external update-notifier",
    "watch": "NODE_ENV=production ncc build src/app.ts -o build --watch --external update-notifier",
    "test": "NODE_ENV=test jest",
    "clean": "rimraf build",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,yaml,yml,md}\"",
    "pre-commit": "lint-staged",
    "prepublishOnly": "rimraf build && ncc build src/app.ts -o build --minify"
  },
  "files": [
    "bin",
    "build"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "update-notifier": "^4.1.3"
  },
  "devDependencies": {
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^13.13.52",
    "@types/update-notifier": "^2.5.2",
    "@types/yargs": "^15.0.14",
    "@zeit/ncc": "^0.21.0",
    "aws-sdk": "^2.1009.0",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-neo": "^0.6.2",
    "husky": "7.0.2",
    "ini": "1.3.8",
    "inquirer": "7.3.3",
    "jest": "^27.2.5",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "10.3.0",
    "typescript": "4.4.4",
    "yargs": "15.4.1"
  }
}
