{
  "name": "awsx",
  "description": "AWS CLI profile switcher with MFA support",
  "version": "1.0.0",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/awsx"
  },
  "engines": {
    "node": "^10.0.0"
  },
  "bin": {
    "_awsx_prompt": "./bin/awsx.js",
    "_awsx": "./bin/run.sh"
  },
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:bin": "node bin/awsx.js",
    "build": "tsc && ncc build build/app.js -o dist",
    "watch": "tsc -w",
    "clean": "rimraf build dist",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,yaml,yml,md}\""
  },
  "files": [
    "bin",
    "dist"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.562.0",
    "chalk": "^2.4.2",
    "ini": "^1.3.5",
    "inquirer": "^7.0.0",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/ini": "^1.3.30",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^12.7.12",
    "@types/yargs": "^13.0.3",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.5.1",
    "eslint-config-neo": "^0.4.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
