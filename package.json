{
  "name": "awsx",
  "description": "AWS CLI profile switcher with MFA support",
  "version": "1.0.0",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/awsx"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "_awsx_prompt": "./bin/awsx.js",
    "_awsx": "./bin/run.sh"
  },
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:build": "node bin/awsx.js",
    "build": "ncc build src/app.ts -o build --minify",
    "watch": "ncc build src/app.ts -o build --minify --watch",
    "clean": "rimraf build",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,yaml,yml,md}\"",
    "prepublishOnly": "rimraf build && ncc build src/app.ts -o build --minify"
  },
  "files": [
    "bin",
    "build"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "aws-sdk": "2.610.0",
    "chalk": "3.0.0",
    "ini": "1.3.5",
    "inquirer": "7.0.4",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "@types/ini": "1.3.30",
    "@types/inquirer": "6.5.0",
    "@types/node": "13.5.0",
    "@types/yargs": "15.0.1",
    "@zeit/ncc": "0.21.0",
    "eslint": "6.8.0",
    "eslint-config-neo": "0.5.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  }
}
